<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
  >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:orientation="horizontal">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/space_stations"

   />
    <ImageView
      android:id="@+id/imageView2"
      android:layout_width="91dp"
      android:layout_height="25dp"
      android:layout_weight="1"
      android:src="@drawable/space_station_icon"
       />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/flights"
      />

    <ImageView
      android:id="@+id/imageView3"
      android:layout_width="31dp"
      android:layout_height="33dp"
      android:layout_weight="1"
      android:src="@drawable/rocket_icon"
       />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/rovers"
   />

    <ImageView
      android:id="@+id/imageView4"
      android:layout_width="35dp"
      android:layout_height="29dp"
      android:layout_weight="1"
      android:src="@drawable/rover_icon"
     />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:orientation="horizontal">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/round_trip"
    />
    <Switch
      android:id="@+id/switch1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/roundTripSwitch" />

  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:orientation="horizontal">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="DCA"
       />

    <ImageView
      android:id="@+id/imageView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:src="@drawable/double_arrows" />

    <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="MARS" />
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:orientation="horizontal">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Sept 14 - 17"
       />

    <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="1 Traveller" />
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/imageView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:src="@drawable/single_arrow" />
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/imageView7"
      android:layout_width="wrap_content"
      android:layout_height="33dp"
      android:layout_weight="1"
      android:src="@drawable/track_icon" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Track the staus of a Journey"
      />


  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/imageView9"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:src="@drawable/galaxy"
      android:layout_width="wrap_content" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Explore the Universe"
       />
  </LinearLayout>


</LinearLayout>